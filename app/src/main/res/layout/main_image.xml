<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".image.ImageActivity">


    <Button
        android:text="默认方式加载图片"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/btn_load_normal"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <Button
        android:text="高效方式加载"
        android:textSize="12sp"

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/btn_load_efficient"
        app:layout_constraintRight_toLeftOf="@+id/iv_main"
        app:layout_constraintBottom_toBottomOf="@+id/btn_load_normal"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn_load_normal"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:text="实现照片墙的"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:id="@+id/btn_photo_wall"
        app:layout_constraintRight_toRightOf="@+id/btn_load_normal"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/btn_load_normal"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
